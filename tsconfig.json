{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true
  },
  "ts-node": {
    "swc": true,
    "esm": true
  }
}