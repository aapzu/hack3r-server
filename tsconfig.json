{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true
  },
  "ts-node": {
    "swc": true
  }
}